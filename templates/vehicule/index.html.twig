{% extends 'base.html.twig' %}

{% block title %}Liste des véhicules{% endblock %}

{% block body %}

    <div class="container mt-5">

    {% for message in app.flashes('success') %}
      <div class="alert alert-success text-center">
        {{ message }}
      </div>
    {% endfor %}
        
    <h3 class="mb-4">Liste des véhicules</h3>

    <a href="{{ path('app_vehicule_new') }}" class="btn btn-success"><i class="bi bi-plus-square"></i></a>
        <b>Ajouter un véhicule</b>

    <div class="mt-3">
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Modèle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicule in vehicules %}
            <tr>
                <td>{{ vehicule.id }}</td>
                <td>{{ vehicule.marque }}</td>
                <td>{{ vehicule.modele }}</td>
                <td>
                    <a href="{{ path('app_vehicule_show', {'id': vehicule.id}) }}" class="btn btn-info"><i class="bi bi-eye"></i></a>
                    <a href="{{ path('app_vehicule_edit', {'id': vehicule.id}) }}" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteVehicule{{ vehicule.id }}"><i class="bi bi-trash"></i></button>
                </td>
            </tr>

            {{ include ('vehicule/delete.html.twig') }}
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucun résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    </div>

{% endblock %}
